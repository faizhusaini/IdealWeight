<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/MyLayout"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".IdealWeight">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:background="@drawable/bg2"
        android:scaleType="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:max="250"
        android:progressDrawable="@drawable/ruler"
        android:thumb="@drawable/finger_3"
        android:progress="1"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar"
        android:max="150"
        android:progressDrawable="@drawable/weightbar"
        android:thumb="@drawable/finger_3"
        android:progress="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height (cm)"
        android:id="@+id/textView3"
        android:layout_below="@+id/seekBar"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight(Kg)"
        android:id="@+id/textView4"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignStart="@+id/seekBar2"
        android:layout_alignBottom="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:id="@+id/button"
        android:layout_marginTop="97dp"
        android:onClick="GetBMI"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView4"
        android:textColor="#ff3b39ff"
        android:textAppearance="@android:color/holo_blue_dark"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:id="@+id/textView5"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#ffff3d44" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ideal Weight"
        android:id="@+id/textView6"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textColor="#ffff5f44" />


</RelativeLayout>
