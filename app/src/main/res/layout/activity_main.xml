<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/MyLayout"
    android:layout_height="match_parent"
    tools:context=".IdealWeight">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:background="@drawable/bg3"
        android:scaleType="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:max="250"
        android:progressDrawable="@drawable/ruler"
        android:thumb="@drawable/finger_3"
        android:progress="1"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:max="150"
        android:progressDrawable="@drawable/weightbar"
        android:thumb="@drawable/finger_3"
        android:progress="1"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/heightValue"
        android:id="@+id/textView"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/seekBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weightValue"
        android:id="@+id/textView2"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
      android:layout_below="@+id/seekBar2" />

